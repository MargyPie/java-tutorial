<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<!-- HBox Layout aligns its children horizontally -->

<HBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="bottom_right"
        style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed"
        spacing="10">
    <!-- "style" is making the whole space of the child visible -->
    <!-- Spacing between the buttons -->

    <!-- Spacing to the bottom and right edge of the window -->
    <padding>
        <Insets bottom="10" right="10"/>
    </padding>

    <!-- Adding buttons of the same width -->
    <Button text="Okay" prefWidth="90"/>
    <Button text="Cancel" prefWidth="90"/>
    <Button text="Help" prefWidth="90"/>

</HBox>